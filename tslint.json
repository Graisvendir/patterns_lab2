{
    "extends": "tslint:recommended",
    "rules": {
        "variable-name": false,
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "quotemark": false,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        },
        "member-access": false,
        "no-trailing-whitespace": false,
        "indent": false,
        "no-namespace": false,
        "max-classes-per-file": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}
